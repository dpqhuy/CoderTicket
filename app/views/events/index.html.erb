<div class='events-header' style='background-image: url(<%= header_background_image_url %>)'>
  <div class="container">
    <h2> Discover upcoming events </h2>
    <%= form_tag(events_path, :remote => true, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search for events, shows, courses..." %>
    <% end %>
    
  </div>
</div>
<div class="container-fluid events-list">
<%= flash_messages %>
    <%= render "list", events: @events, mine: false %>
  </div>
</div>