<div class="create-event-form">
	<%= form_for(Venue.new) do |f| %>
      <div class="form-group row">
        <%= f.label 'name', class: 'col-xs-2 col-form-label' %>
        <div class="col-xs-10">
          <%= f.text_field 'name', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label 'full_address', class: 'col-xs-2 col-form-label' %>
        <div class="col-xs-10">
          <%= f.text_field 'full_address', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label 'region_id', class: 'col-xs-2 col-form-label' %>
        <div class="col-xs-10">
          <%= f.select 'region_id', regions.collect { |r| [ r.name, r.id ] }, class: 'form-control' %>
        </div>
      </div>
    	<div class="form-group row">
  		<%= f.submit 'Submit', class: 'btn btn-block btn-info' %>
      </div>
	<% end %>
</div>